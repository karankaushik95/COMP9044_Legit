#!/bin/dash

filename="`echo "$0" | rev | cut -d'/' -f1 | rev `"

if [ $# -eq 0 ]; then
	echo "usage: "$filename" <filenames>" 
	exit 1
fi 
for file in "$@"
do
	if [ ! -f  "$file" ]; then
		echo ""$filename": error: can not open '"$file"'"
		exit 1
	fi
done
mkdir -p ".legit/index";
for file in "$@"
do
	cp $file .legit/index
	
done
